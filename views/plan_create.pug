html
  head 
    title="Task Management System"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
  body
    div(class="container")
      h2(class="pb-2 border-bottom")="Task Management System - Create Plan"
        if isLoggedIn
          a(class="btn btn-link" href="/logout")="Logout"

      if error
        p(class="alert alert-danger")=error

      if success
        p(class="alert alert-success")=success

      div(class="row")
        div(class="col")
          a(class="btn btn-link" href="/tmsys")="Back to menu"
      hr
      //-pug: "unless" means "if(!<condition>)"
      unless disallowed
        form(method="post" action="")
          div(class="mb-3")
            label(for="planAppAcronym" class="col-2 col-form-label")="For Application:"
            div(class="col-2")
              select#planAppAcronym(class="form-select" aria-label="Select application" name="Plan_app_Acronym")
                for a in acronymList
                  option(value=a.App_Acronym)=a.App_Acronym
          div(class="mb-3")
            label(for="planMVPName" class="col-2 col-form-label")="Plan MVP Name:"
            div(class="col-2")
              input#planMVPName(type="text" name="Plan_MVP_name" class="form-control")
          div(class="mb-3")
            label(for="planDateStart" class="col-2 col-form-label")="Start Date:"
            div(class="col-2")
              //-input(type="date" name="Plan_startDate" class="d-none" value=Plan_startDate readonly)
              input#planDateStart(type="date" name="Plan_startDate" class="form-control")
          div(class="mb-3")
            label(for="planDateEnd" class="col-2 col-form-label")="End Date:"
            div(class="col-2")
              //-input(type="date" name="Plan_endDate" class="d-none" value=Plan_endDate readonly)
              input#planDateEnd(type="date" name="Plan_endDate" class="form-control")
          button(type="submit" class="btn btn-primary" name="btn_createPlan" value=true)="Create Plan"