html
  head 
    title="Task Management System"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
  body 
    include includes/form_createApp.pug
    
    div(class="container")
      h2(class="pb-2 border-bottom")="Task Management System"
        if isLoggedIn
            small 
              a(href="/logout")="Logout"

      if error
        p(class="alert alert-danger")=error

      if success
        p(class="alert alert-success")=success

      div(class="container")
        form(method="get" action="")
          div(class="row")
            label(for="select-app" class="col-1 col-form-label")="Application:"
            div(class="col-2")
              select(id="select-app" class="form-select" aria-label="Select Application")
                option(selected value="(all)")="(All)"
                option(value="1")="One"
                option(value="2")="Two"
                option(value="3")="Three"
            label(for="select-plan" class="col-1 col-form-label")="Plan:"
            div(class="col-2")
              select(id="select-plan" class="form-select" aria-label="Select Plan")
                option(selected value="(all)")="(All)"
                option(value="1")="One"
                option(value="2")="Two"
                option(value="3")="Three"
            button(type="submit" class="btn btn-primary mb-3 col-1")="Filter"

      if specificApplication
        hr
        div(class="row")
          h4(class="pb-2 text-decoration-underline")="Application Details"
        div(class="row")
          p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam ante neque, varius eget sodales eu, sollicitudin ac mi. Fusce mattis.
        div(class="row")
          div(class="col-lg-1")="Start Date:"
          div(class="col-lg-2")="Lorem ipsum"
          div(class="col-lg-1")="End Date:"
          div(class="col-lg-2")="Lorem ipsum"
        div(class="row-lg")
          button(class="col-lg-2 btn btn-primary" data-bs-toggle="modal" type="button" data-bs-target="#updateAppModal")="Update Application"
      
      hr
      div(class="row")
        h4(class="pb-2 text-decoration-underline")="Plan Details"
      div(class="row")
        div(class="col-lg-1")="Start Date:"
        div(class="col-lg-2")="Lorem ipsum"
        div(class="col-lg-1")="End Date:"
        div(class="col-lg-2")="Lorem ipsum"
      div(class="row-lg")
        button(class="col-lg-2 btn btn-primary" data-bs-toggle="modal" type="button" data-bs-target="#updatePlanModal")="Update Plan"

      hr
      div(class="container-fluid py-2")
        h4(class="pb-2 text-decoration-underline")="Open"
        div(class="d-flex flex-row flex-nowrap overflow-auto")
          div(class="card card-body" style="max-width: 300px;min-width: 300px;min-height: 100px;margin-right: 5px;")
              div(class="card-header ")="Task ID"
              h5(class="card-title ")="Card title"
              p(class="card-text ") Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam ante neque, varius eget sodales eu, sollicitudin ac mi. Fusce mattis.

      div(class="container-fluid py-2")
        h4(class="pb-2 text-decoration-underline")="To-Do"
        div(class="d-flex flex-row flex-nowrap overflow-auto")

      div(class="container-fluid py-2")
        h4(class="pb-2 text-decoration-underline")="Doing"
        div(class="d-flex flex-row flex-nowrap overflow-auto")

      div(class="container-fluid py-2")
        h4(class="pb-2 text-decoration-underline")="Done"
        div(class="d-flex flex-row flex-nowrap overflow-auto")

      div(class="container-fluid py-2")
        h4(class="pb-2 text-decoration-underline")="Closed"
        div(class="d-flex flex-row flex-nowrap overflow-auto")

      hr
      div(class="row")
        h4="Task Management"
      div(class="row")
        button(class="col-lg-2 btn btn-link" data-bs-toggle="modal" type="button" data-bs-target="#createAppModal")="Create Application"
        //-a(class="col-lg-2 btn btn-link" href="#" role="button")="Update Application"
        a(class="col-lg-2 btn btn-link" href="#" role="button")="Delete Application"
      div(class="row")
        a(class="col-lg-2 btn btn-link" href="#" role="button")="Create Plan"
        //-a(class="col-lg-2 btn btn-link" href="#" role="button")="Update Plan"
        a(class="col-lg-2 btn btn-link" href="#" role="button")="Delete Plan"
      div(class="row")
        a(class="col-lg-2 btn btn-link" href="#" role="button")="Create Task"
        //-a(class="col-lg-2" href="#")="Update Task"
        //-a(class="col-lg-2" href="#")="Delete Task"

            
      if(canAdmin)
        hr
        div(class="row")
          h4="Admin controls"
        
        div(class="row")
          a(class="col-lg-2 btn btn-link" href="/admin/usercreate")="Create New User"
          a(class="col-lg-2 btn btn-link" href="/admin/useredit")="Edit User Details"

      hr

      div(class="row")
        h4="User settings"

      div(class="row")
        a(class="col-lg-2 btn btn-link" href="/user/passwordchange")="Change My Password"
        a(class="col-lg-2 btn btn-link" href="/user/emailchange")="Change My Email"