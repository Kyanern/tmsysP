html
  head 
    title="Task Management System"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body 
    div(class="container")
      h2(class="pb-2 border-bottom")="Task Management System - (Admin) Edit User"
        if isLoggedIn
            small
              a(href="/logout")="Logout"

      if error
        p(class="alert alert-danger")=error

      if success
        p(class="alert alert-success")=success

      if canAdmin
        form(class="row g-3" method="get" action="")
          div(class="col-auto")
            input(type="text" class="form-control" name="username" placeholder="Search usernames...")
          div(class="col-auto")
            button(type="submit" class="btn btn-primary mb-3")="Search"
        if usernameList
          form(method="get" action="/edituser_editing")
            table(style="width:100%")
              for user in usernameList 
                tr
                  td(style="border:1px solid black")= user.username 
                  td(style="border:1px solid black")= user.email 
                  td(style="border:1px solid black")= user.usergroup 
                  td(style="border:1px solid black")= (user.isactive?"Enabled":"Disabled")
                  td(style="border:1px solid black") 
                    button(type="submit" class="btn btn-primary mb-3" name="editThisUser" value=user)="Edit"

    
      div(class="row")
        div(class="col")
          a(href="/menu2")="Back to menu"