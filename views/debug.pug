html(style="height: -webkit-fill-available")
  head 
    title="Task Management System DEBUG"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    link(href="stylesheets/sidebar-nav.css" rel="stylesheet")
  body
    div(class="container")
      section(class="section-content py-3")
        div(class="row")
          aside(class="col-lg-2")
            nav(class="sidebar card py-2 mb-4")
              ul(class="nav flex-column" id="nav_accordion")
                li(class="nav-item")
                  a(class="nav-link" data-bs-toggle="collapse" data-bs-target="#menu_item1" href="#")="Submenu links"
                    i(class="bi small bi-caret-down-fill")
                  ul(id="menu_item1" class="submenu collapse" data-bs-parent="#nav_accordion")
                    li
                      a(class="nav-link" href="#")="Submenu item 1"
                    li
                      a(class="nav-link" href="#")="Submenu item 2" 
                    li
                      a(class="nav-link" href="#")="Submenu item 3"
          main(class="col-lg-9")
            div(class="container")
              h2(class="pb-2 border-bottom")="Task Management System DEBUG"

              if error 
                p(class="alert alert-danger")=error

              if success
                p(class="alert alert-success")=success

              form(class="row g-3" method="post" action="")
                div(class="col-auto")
                  button(type="submit" class="btn btn-primary mb-3" id="btn_test_db" name="btn_test_db" value=true)="test database query"
              form(class="row g-3" method="post" action="")
                div(class="col-auto")
                  button(type="submit" class="btn btn-primary mb-3" id="btn_wrong_query" name="btn_wrong_query" value=true)="test wrong query"
              
              form(class="row g-3" method="post" action="" id="form_argon2_test")
                div(class="col-auto")
                  input( type="password" class="form-control" name="password" placeholder="Password")
                div(class="col-auto")
                  button(type="submit" class="btn btn-primary mb-3" id="btn_argon2" name="btn_argon2" value=true)="test argon2 encryption"
            
              div(class="row")
                div(class="col")
                  a(href="/")="Exit debug menu"