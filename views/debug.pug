html
  head 
    title="Task Management System DEBUG"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body 
    div(class="container")
      h2(class="pb-2 border-bottom")="Task Management System DEBUG"

      if error 
        p(class="alert alert-danger")=error

      if success
        p(class="alert alert-success")=success

      form(class="row g-3" method="post" action="")
        div(class="col-auto")
          button(type="submit" class="btn btn-primary mb-3" id="btn_test_db" name="btn_test_db" value=true)="test database query"
      form(class="row g-3" method="post" action="")
        div(class="col-auto")
          button(type="submit" class="btn btn-primary mb-3" id="btn_wrong_query" name="btn_wrong_query" value=true)="test wrong query"
      
      form(class="row g-3" method="post" action="" id="form_argon2_test")
        div(class="col-auto")
          input( type="password" class="form-control" name="password" placeholder="Password")
        div(class="col-auto")
          button(type="submit" class="btn btn-primary mb-3" id="btn_argon2" name="btn_argon2" value=true)="test argon2 encryption"
      //-
        form(class="row g-3" method="get" action="" id="form_methodGet_test")
          div(class="col-auto")
            input(type="text" class="form-control" name="username" placeholder="Search usernames...")
          div(class="col-auto")
            button(type="submit" class="btn btn-primary mb-3" id="btn_searchUsers")="Search"

        if username_term
          p #{username_term}
    
      div(class="row")
        div(class="col")
          a(href="/")="Exit debug menu"