html
  head 
    title="Task Management System"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body 
    div(class="container")
      h2(class="pb-2 border-bottom")="Task Management System"
        if isLoggedIn
            small 
              a(href="/logout")="Logout"

      if error 
        p(class="alert alert-danger")=error

      if success
        p(class="alert alert-success")=success

      form(class="row g-3" method="post" action="")
        div(class="col-auto")
          input( type="password" class="form-control" name="passwordOld" placeholder="Old Password")

        div(class="col-auto")
          input( type="password" class="form-control" name="passwordNew" placeholder="New Password")

        div(class="col-auto")
          input( type="password" class="form-control" name="passwordNew2" placeholder="Confirm New Password")

        div(class="col-auto")
          button(type="submit" class="btn btn-primary mb-3")="Change Password"
      
      div(class="row")
        div(class="col")
          a(href="/menu2")="Back to menu"