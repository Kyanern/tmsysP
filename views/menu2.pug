html
  head 
    title="Task Management System"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body 
    div(class="container")
      h2(class="pb-2 border-bottom")="Task Management System"
        if isLoggedIn
            small 
              a(href="/logout")="Logout"

      if(canAdmin)
        div(class="row")
          h4="Admin controls"
        
        div(class="row")
          div(class="col")
            a(href="/admin/usercreate")="Create New User"
          div(class="col")
            a(href="/admin/useredit")="Edit User Details"

        hr

      div(class="row")
        h4="User settings"

      div(class="row")
        div(class="col")
          a(href="/user/passwordchange")="Change Current User Password"
        div(class="col")
          a(href="/user/emailchange")="Change Current User Email"