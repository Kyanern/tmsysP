//- modal for delete plan confirmation
div(class="modal fade" id="deletePlanModal" tabindex="-1" aria-labelledby="deletePlanModalLabel" aria-hidden="true")
  div(class="modal-dialog modal-dialog-scrollable")
    div(class="modal-content")
        div(class="modal-header")
          h5(class="modal-title" id="deletePlanModalLabel")="Delete Plan <PlanMVPName>"
          button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
        div(class="modal-body")
          div(class="container")
            p Are you sure you want to delete this plan? This action is irreversible!
            p#deletePlanMVPNameText="<PlanMVPName>"
        div(class="modal-footer")
          button(type="button" class="btn btn-secondary" data-bs-dismiss="modal")="Cancel"
          button#btn_deletePlan(type="submit" class="btn btn-danger" name="btn_deletePlan" value="<PlanMVPName>")="Delete Plan"